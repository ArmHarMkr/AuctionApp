@using AuctionApp.Domain.Entities
@model AuctionProd

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Auction Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS styles */
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Welcome to the Auction</h1>
        <img src="@Model.ImagePath"/>
        <p>Current Highest Bid: @Model.LastBidPrice</p>
        <p>Current Price: @Model.LastPrice</p>
        <form asp-action="PlaceBid" asp-route-id="@Model.AuctionProdId" method="post">
            <div class="mb-3">
                <label asp-for="LastBidPrice" class="form-label">Your Bid Amount:</label>
                <input asp-for="LastBidPrice" type="number" class="form-control" id="bidAmount" name="LastBidPrice" required>
            </div>
            <button type="submit" class="btn btn-primary">Place Bid</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.4.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
